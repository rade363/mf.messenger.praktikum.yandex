{
  "name": "mf.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messenger - a Yandex Praktikum project",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "webpack --watch --mode development",
    "build": "webpack --mode production && npm run moveimages",
    "test": "./node_modules/.bin/mocha",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier \"src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "moveimages": "cp -R src/assets/img static/assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rade363/mf.messenger.praktikum.yandex.git"
  },
  "author": "Ilya Belyavskiy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rade363/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/rade363/mf.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-typescript": "7.12.7",
    "@babel/register": "7.12.10",
    "@types/chai": "4.2.14",
    "@types/handlebars": "4.1.0",
    "@types/mocha": "8.2.0",
    "@types/sinon": "9.0.10",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "babel-loader": "8.2.2",
    "chai": "4.2.0",
    "css-loader": "5.0.1",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "express": "4.17.1",
    "file-loader": "6.2.0",
    "handlebars": "4.7.6",
    "husky": "4.3.7",
    "jsdom": "16.4.0",
    "mini-css-extract-plugin": "1.3.4",
    "mocha": "8.2.1",
    "node-sass": "5.0.0",
    "prettier": "2.2.1",
    "sass-loader": "10.1.1",
    "sinon": "9.2.3",
    "ts-loader": "8.0.14",
    "ttypescript": "1.5.12",
    "typescript": "4.1.2",
    "webpack": "5.14.0",
    "webpack-cli": "4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test && npm run lint"
    }
  }
}
